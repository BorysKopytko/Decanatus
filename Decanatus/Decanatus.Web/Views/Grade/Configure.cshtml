@model IEnumerable<Decanatus.DAL.Models.Grade>

@{
    ViewData["Title"] = "Всі оцінки";
}

<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered align-content-center" id="Datatable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Student.FirstName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Student.LastName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Student.MiddleName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Student.GradebookNumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Student.Group.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Student.Group.Speciality.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Student.Group.Speciality.Faculty.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Subject.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Amount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MaxAmount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.GradeType)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Date)
                        </th>
                        <th class="dontNeedFilter">
                            Дії
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Student.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Student.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Student.MiddleName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Student.GradebookNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Student.Group.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Student.Group.Speciality.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Student.Group.Speciality.Faculty.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Subject.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Amount)
                            <td>
                                @Html.DisplayFor(modelItem => item.MaxAmount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.GradeType)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                            <td>
                                <div class="btn-group-vertical w-100">
                                    <a class="btn btn-warning" asp-controller="Grade" asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-edit"></i><br>Редагувати</a>
                                    <a class="btn btn-danger" asp-controller="Grade" asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash"></i><br>Видалити</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <link href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/js/gradeDatatable.js"></script>
}